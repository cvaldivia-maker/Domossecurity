  <script>
    // ======== Datos (edita aqu√≠) ========
    const KPIS = { aniosExperiencia: 8, proyectos: 120 };

    const PANELES = [
      { titulo: 'Estructura de la empresa', texto: 'Operaciones, Proyectos, Soporte y Cumplimiento trabajan en coordinaci√≥n bajo un marco de calidad y seguridad.' },
      { titulo: 'Certificaciones y capacitaci√≥n', texto: 'Entrenamiento continuo y auditor√≠as internas para mantener est√°ndares altos.' },
      { titulo: 'Respuesta y soporte', texto: 'Mesa de ayuda 24/7, SLA definidos y trazabilidad de incidentes.' },
      { titulo: 'Seguridad de la informaci√≥n', texto: 'Controles de acceso, backups y pol√≠ticas de privacidad actualizadas.' },
      { titulo: 'Salud y seguridad laboral', texto: 'Protocolos y equipos de protecci√≥n para todos los colaboradores.' },
      { titulo: 'Sostenibilidad', texto: 'Optimizaci√≥n de recursos y buenas pr√°cticas con proveedores.' },
    ];

    const FEED = [
      { tipo: 'noticia', titulo: 'Nueva oficina de coordinaci√≥n', fecha: '2025-08-12', detalle: 'Ampliamos capacidad para proyectos en la zona centro-sur.' },
      { tipo: 'politica', titulo: 'Pol√≠tica de protecci√≥n de datos v2.1', fecha: '2025-07-02', detalle: 'Actualizamos retenci√≥n y encriptaci√≥n en tr√°nsito y reposo.' },
      { tipo: 'comunicado', titulo: 'Compromiso con clientes PYME', fecha: '2025-05-22', detalle: 'Plan de acompa√±amiento y postventa dedicada.' },
      { tipo: 'noticia', titulo: 'Cierre exitoso de proyecto cr√≠tico', fecha: '2025-03-15', detalle: 'Implementaci√≥n integral concluida antes de plazo.' },
      { tipo: 'politica', titulo: 'Pol√≠tica de prevenci√≥n de riesgos 2025', fecha: '2025-01-10', detalle: 'Lineamientos y m√©tricas reforzadas para terreno.' },
    ];

    const PROYECTOS = [
      { fecha: '2025-09', titulo: 'Centro log√≠stico ‚Äî Monitoreo integral', texto: 'Dise√±o y ejecuci√≥n de soluci√≥n de seguridad perimetral y control de accesos.' },
      { fecha: '2025-04', titulo: 'Infra cr√≠tica ‚Äî Actualizaci√≥n y hardening', texto: 'Mejoras de continuidad operacional y respuesta a incidentes.' },
      { fecha: '2024-11', titulo: 'Retail ‚Äî Cobertura nacional', texto: 'Despliegue coordinado multi-sitio con soporte 24/7.' },
      { fecha: '2024-05', titulo: 'Industria ‚Äî Auditor√≠a de cumplimiento', texto: 'Assessment y remediaci√≥n por etapas.' },
    ];

    // Reemplaza estas im√°genes por archivos reales en /img o URLs absolutas
    const GALLERY = [
      { src: 'https://images.unsplash.com/photo-1584438784894-089d6a62b8fa?q=80&w=1600&auto=format&fit=crop', alt: 'Equipo trabajando en sala de control' },
      { src: 'https://images.unsplash.com/photo-1558346490-a72e53ae2d4f?q=80&w=1600&auto=format&fit=crop', alt: 'Infraestructura y cableado ordenado' },
      { src: 'https://images.unsplash.com/photo-1518779578993-ec3579fee39f?q=80&w=1600&auto=format&fit=crop', alt: 'Tecnolog√≠a y monitoreo' },
      { src: 'https://images.unsplash.com/photo-1541795795328-f73a39f8d3d3?q=80&w=1600&auto=format&fit=crop', alt: 'Trabajo en terreno' }
    ];

    // ======== Render ========
    document.getElementById('year').textContent = new Date().getFullYear();
    document.getElementById('kpi-anios').textContent = KPIS.aniosExperiencia;
    document.getElementById('kpi-proy').textContent = KPIS.proyectos;

    const grid = document.getElementById('paneles-grid');
    PANELES.forEach(p => {
      const el = document.createElement('article');
      el.className = 'card';
      el.innerHTML = `<h3>${p.titulo}</h3><p>${p.texto}</p>`;
      grid.appendChild(el);
    });

    const feed = document.getElementById('feed');
    const renderFeed = (filter = 'all') => {
      feed.innerHTML = '';
      FEED
        .filter(i => filter === 'all' ? true : i.tipo === filter)
        .sort((a,b) => b.fecha.localeCompare(a.fecha))
        .forEach(i => {
          const row = document.createElement('div');
          row.className = 'item';
          row.innerHTML = `
            <div>
              <strong>${i.titulo}</strong><br>
              <time datetime="${i.fecha}">${new Date(i.fecha).toLocaleDateString('es-CL')}</time>
              <p>${i.detalle}</p>
            </div>
            <span class="badge">${i.tipo.charAt(0).toUpperCase() + i.tipo.slice(1)}</span>
          `;
          feed.appendChild(row);
        });
    };
    renderFeed();

    // chips
    document.querySelectorAll('.chip').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.chip').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        renderFeed(btn.dataset.filter);
      });
    });

    // timeline proyectos
    const tl = document.getElementById('timeline');
    PROYECTOS
      .sort((a,b) => b.fecha.localeCompare(a.fecha))
      .forEach(m => {
        const el = document.createElement('div');
        el.className = 'milestone';
        el.innerHTML = `<strong>${m.fecha}</strong> ‚Äî ${m.titulo}<p class="lead">${m.texto}</p>`;
        tl.appendChild(el);
      });

    // Carrusel
    const viewport = document.getElementById('viewport');
    const dots = document.getElementById('dots');
    let idx = 0; let timer;

    function mountCarousel(){
      viewport.innerHTML = '';
      dots.innerHTML = '';
      GALLERY.forEach((g,i) => {
        const img = document.createElement('img');
        img.src = g.src; img.alt = g.alt || `Imagen ${i+1}`;
        if(i===0) img.classList.add('active');
        viewport.appendChild(img);

        const dot = document.createElement('button');
        dot.className = 'dot' + (i===0 ? ' active' : '');
        dot.setAttribute('aria-label', `Ir a imagen ${i+1}`);
        dot.addEventListener('click', () => goTo(i));
        dots.appendChild(dot);
      });
      auto();
    }

    function goTo(n){
      const imgs = viewport.querySelectorAll('img');
      imgs[idx].classList.remove('active');
      dots.children[idx].classList.remove('active');
      idx = (n + imgs.length) % imgs.length;
      imgs[idx].classList.add('active');
      dots.children[idx].classList.add('active');
      auto();
    }
    function prev(){ goTo(idx - 1); }
    function next(){ goTo(idx + 1); }
    function auto(){ clearTimeout(timer); timer = setTimeout(() => next(), 5000); }

    document.getElementById('prev').addEventListener('click', prev);
    document.getElementById('next').addEventListener('click', next);
    document.addEventListener('keydown', (e) => { if(e.key==='ArrowLeft') prev(); if(e.key==='ArrowRight') next(); });

    mountCarousel();

    // Men√∫ m√≥vil simple
    function toggleMenu(){
      const existing = document.querySelector('.links.mobile');
      if (existing) { existing.remove(); return; }
      const nav = document.createElement('nav');
      nav.className = 'links mobile card';
      nav.style.position = 'absolute';
      nav.style.right = '4%';
      nav.style.top = '58px';
      nav.style.padding = '12px';
      nav.innerHTML = `
        <a href="#quienes">Qui√©nes somos</a>
        <a href="#paneles">Paneles</a>
        <a href="#noticias">Noticias & Pol√≠ticas</a>
        <a href="#proyectos">Proyectos</a>
        <a href="#galeria">Galer√≠a</a>
        <a href="#contacto">Contacto</a>
      `;
      document.querySelector('header .container').appendChild(nav);
    }
    window.toggleMenu = toggleMenu;

    // Env√≠o de formulario (demo)
    async function sendForm(e){
      e.preventDefault();
      const form = e.target;
      const data = Object.fromEntries(new FormData(form));
      // Integra Formspree/Netlify o tu backend aqu√≠
      await new Promise(r => setTimeout(r, 600));
      document.getElementById('form-status').textContent = '¬°Gracias! Hemos recibido tu mensaje.';
      form.reset();
    }
  </script>
